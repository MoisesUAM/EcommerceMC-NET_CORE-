
@model Ecommerce.Models.ViewModels.OrderDetailsViewModel
@using Ecommerce.BLL.Notifications

@{
    ViewData["Title"] = "Detalle de la Orden: "+Model.Order!.IdOrder;
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <div class="row">
        <div class="col-12">
            <h2 class="text-center text-info fw-bold">@ViewData["Title"]</h2>
        </div>
    </div>
</div>
<hr class="text-danger" />

<form method="post">
    <input hidden asp-for="Order!.IdOrder" />
    <br />
    <div class="container">
        <div class="card">
            <div class="card-header bg-dark text-light ml-0 row ">
                <div class="col-12 d-none d-md-block col-md-6 pb-1">
                    <i class="fas fa-shopping-cart"></i> &nbsp; Resumen de la Orden
                </div>
                <div class="col-12 col-md-4 offset-md-2 text-right">
                    <a asp-area="Admin" asp-controller="Order" asp-action="Index" class="btn btn-outline-info form-control btn-sm">Regresar</a>
                </div>
            </div>
            <div class="card-body">
                <div class="container rounded p-2">
                    <div class="row">
                        <div class="col-12 col-lg-6 pb-4">
                            <div class="row">
                                <h4 class="d-flex justify-content-between align-items-center mb-3">
                                    <span class="text-secondary">Detalles de Envío:</span>
                                </h4>
                            </div>
                            <div class="row my-1">
                                <div class="col-3">Nombres</div>
                                <div class="col-9">
                                    @if (User.IsInRole(DS.AdminRole))
                                    {
                                        <input asp-for="Order!.ClientName" class="form-control" />
                                    }
                                    else
                                    {
                                        <input asp-for="Order!.ClientName" readonly type="text" class="form-control" />
                                    }

                                </div>
                            </div>
                            <div class="row my-1">
                                <div class="col-3">telefono</div>
                                <div class="col-9">
                                    @if (User.IsInRole(DS.AdminRole))
                                    {
                                        <input asp-for="Order!.PhoneNumber" class="form-control" />
                                    }
                                    else
                                    {
                                        <input asp-for="Order!.PhoneNumber" readonly type="text" class="form-control" />
                                    }
                                </div>
                            </div>
                            <div class="row my-1">
                                <div class="col-3">Direccion</div>
                                <div class="col-9">
                                    @if (User.IsInRole(DS.AdminRole))
                                    {
                                        <input asp-for="Order!.ShippingAddress" class="form-control" />
                                    }
                                    else
                                    {
                                        <input asp-for="Order!.ShippingAddress" readonly type="text" class="form-control" />
                                    }
                                </div>
                            </div>
                            <div class="row my-1">
                                <div class="col-3">Ciudad</div>
                                <div class="col-9">
                                    @if (User.IsInRole(DS.AdminRole))
                                    {
                                        <input asp-for="Order!.City" class="form-control" />
                                    }
                                    else
                                    {
                                        <input asp-for="Order!.City" readonly type="text" class="form-control" />
                                    }
                                </div>
                            </div>
                            <div class="row my-1">
                                <div class="col-3">Pais</div>
                                <div class="col-9">
                                    @if (User.IsInRole(DS.AdminRole))
                                    {
                                        <input asp-for="Order!.Country" class="form-control" />
                                    }
                                    else
                                    {
                                        <input asp-for="Order!.Country" readonly type="text" class="form-control" />
                                    }
                                </div>
                            </div>
                            <div class="row my-1">
                                <div class="col-3">Email</div>
                                <div class="col-9">
                                    @if (User.IsInRole(DS.AdminRole))
                                    {
                                        <input asp-for="Order.Users.Email" class="form-control" />
                                    }
                                    else
                                    {
                                        <input asp-for="Order.Users.Email" readonly type="text" class="form-control" />
                                    }
                                </div>
                            </div>
                            <div class="row my-1">
                                <div class="col-3">Fecha Orden</div>
                                <div class="col-9">
                                    <input value="@Model.Order.OrderDate.ToShortDateString()" readonly type="text" class="form-control" />
                                </div>
                            </div>
                            <div class="row my-1">
                                <div class="col-3">Carrier</div>
                                <div class="col-9">
                                    @if (User.IsInRole(DS.AdminRole))
                                    {
                                        <input id="carrierId" asp-for="Order!.Carrier" class="form-control" />
                                    }
                                    else
                                    {
                                        <input asp-for="Order!.Carrier" readonly type="text" class="form-control" />
                                    }
                                </div>
                            </div>
                            <div class="row my-1">
                                <div class="col-3">Numero Envio</div>
                                <div class="col-9">
                                    @if (User.IsInRole(DS.AdminRole))
                                    {
                                        <input id="trackingNumberId" asp-for="Order!.TrackingNumber" class="form-control" />
                                    }
                                    else
                                    {
                                        <input asp-for="Order!.TrackingNumber" readonly type="text" class="form-control" />
                                    }
                                </div>
                            </div>
                            <div class="row my-1">
                                <div class="col-3">Fecha Envio</div>
                                <div class="col-9">
                                    @if (Model.Order.ShippingDate.Year < 1900)
                                    {
                                        <input id="fechaEnvio" type="text" readonly class="form-control" />
                                    }
                                    else
                                    {
                                        <input value="@Model.Order.ShippingDate.ToString("dd/MMM/yyyy hh:mm tt")" id="fechaEnvio" type="text" readonly class="form-control" />
                                    }

                                </div>
                            </div>
                            @if (User.IsInRole(DS.AdminRole))
                            {
                                <div class="row my-1">
                                    <div class="col-3">Transaccion ID</div>
                                    <div class="col-9">
                                        <input asp-for="Order!.IdTransaction" type="text" readonly class="form-control" />
                                    </div>
                                </div>
                                <div class="row my-1">

                                    <div class="col-3">Fecha de Pago</div>
                                    <div class="col-9">
                                        <input value="@Model.Order.PaymentDate.ToShortDateString()" readonly id="paymentDate" type="text" class="form-control" />
                                    </div>
                                </div>
                                <div class="row my-1">
                                    <div class="col-3">Estado Pago</div>
                                    <div class="col-9">
                                        <input asp-for="Order!.PaymentState" type="text" readonly class="form-control" />
                                    </div>
                                </div>
                            }

                        </div>
                        <div class="col-12 col-lg-5 offset-lg-1">
                            <h4 class="d-flex justify-content-between align-items-center mb-3">
                                <span class="text-secondary">Detalle de la Orden</span>
                            </h4>
                            <ul class="list-group mb-3">
                                @foreach (var item in Model.OrderDetailList)
                                {
                                    <li class="list-group-item d-flex justify-content-between p-2">
                                        <div class="row container">
                                            <div class="col-8">
                                                <input type="hidden" asp-for="@item.IdOrder" />
                                                <h6 class="my-0 text-secondary">@item.Products.Description</h6>
                                                <small class="text-muted">Precio : @item.Price</small><br />
                                                <small class="text-muted">Cantidad : @item.Quantity</small>
                                            </div>
                                            <div class="col-4 text-end">
                                                <p class="text-success">@(String.Format("{0:C}", item.Price * item.Quantity))</p>
                                            </div>
                                        </div>
                                    </li>
                                }

                                <li class="list-group-item bg-info">
                                    <div class="row container">
                                        <div class="col-8">
                                            <h6 class="text-white">TOTAL </h6>
                                        </div>
                                        <div class="col-4 text-end">
                                            <h6 class="text-white">@(String.Format("{0:C}", Model.Order.TotalOrderAmount))</h6>
                                        </div>
                                    </div>
                                </li>
                            </ul>
                            <hr class="text-danger" />
                            <div class="mb-3">
                                <div class="d-grid gap2">
                                    @if (User.IsInRole(DS.AdminRole))
                                    {
                                        @if (Model.Order.OrderState == DS.ApprovedOrder)
                                        {
                                            <a class="btn btn-outline-dark form-control" role="button" asp-action="ProcessOrder" asp-route-id="@Model.Order.IdOrder"><i class="bi bi-arrow-clockwise"></i> Procesar Orden</a>
                                        }
                                        @if(Model.Order.OrderState == DS.OrderProcessing)
                                        {
                                         <input class="btn btn-outline-warning form-control" id="btnSendOrder" type="submit" value="Enviar Orden" formaction="/Admin/Order/SendOrder" formmethod="post" />
                                        }
                                        @if(Model.Order.OrderState == DS.OrderShipped)
                                        {
                                            <div class="alert alert-info text-center" role="alert">
                                                <strong class="text-center text-danger fw-bold">Estado de la Orden</strong>
                                                <hr class="text-danger" />
                                                <h5>@Model.Order.OrderState</h5>
                                            </div>
                                        }
                                    }else
                                    {
                                        <div class="alert alert-primary text-center" role="alert">
                                            <strong class="text-center text-danger fw-bold">Estado de la Orden</strong>
                                            <hr class="text-danger" />
                                            <h5>@Model.Order.OrderState</h5>
                                        </div>
                                    }
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>

@section Scripts{
    <script src="~/js/OrderFunctions.js"></script>
}